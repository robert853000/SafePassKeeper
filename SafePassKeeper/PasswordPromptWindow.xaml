<Window x:Class="SafePassKeeper.PasswordPromptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SafePassKeeper"
        mc:Ignorable="d"
        Title="PasswordPromptWindow" Height="152" Width="349">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Enter Password:" Margin="0,0,0,10"/>
            <PasswordBox x:Name="PasswordBox" Width="250" Margin="0,0,0,20"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="OK" Width="75" Margin="5" Click="OkButton_Click"/>
                <Button Content="Cancel" Width="75" Margin="5" Click="CancelButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
